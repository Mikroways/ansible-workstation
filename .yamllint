---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  molecule/
  .tox/
  .cache/
  .direnv/
  .pre-commit-config.yaml
  .git/
  .github/
  .gitlab-ci.yml
